@model Products
@{
}

<h1>@Model.Name</h1>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageThumbnailUrl" />
    <div class="caption-full">
        <h3 class="text-right"> @Model.Price.ToString("c2") </h3>
        <h3><a href="#">@Model.Name</a> </h3>
        <p>@Model.Description</p>
    </div>
    <div>
        <form id="@Model.Product_Id" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="Product_Id" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Description
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </div>
</div>